                },
                {
                    href: "#",
                    name: "Contacts",
                },
            ]
        }
        ],


        button: [
        {
            name: "Login",
            href: "#"
        },
        {
            name: "Sign Up",
            href: "#"
        },
        ],
} %}
{% endif %}


<header class="header js-header">
    <div class="header__container">
        <div class="header__wrap">
            <div class="header__inner">
                <div class="header__logo">
                    <a class="header__logo-link" href="/">
                        {% if args.logo.src %}
                        <img class="header__logo-img" src="{{ args.logo.src }}">
                        {% endif %}
                    </a>
                </div>
        
                <button class="header__menu-btn header__toggler">
                    Menu
                    {% include "elements/icon.twig" with { name: "ic-more", modifier: "header__nav-icon" } %}
                </button>
            </div>
    
            <nav class="header__nav">
                {% if args.list|length %}
                <ul class="header__nav-list">
    
                    {% for item in args.list %}
                    <li
                        class="header__nav-item {% if item.name and item.sublist|length %}header__submenu js-submenu{% endif %}">
                        {% if item.href and item.name %}
                        <a class="header__nav-link {% if item.isActive %} header__nav-link--active {% endif %}"
                            href="{{ item.href }}">{{ item.name }}</a>
                        {% elseif item.name and item.sublist|length %}
                        <button class="header__submenu-btn js-submenu-btn">{{ item.name }}
                            <span class="header__sumbenu-icon">{% include "elements/icon.twig" with { name: "ic-more", modifier: "header__nav-icon" } %}</span>
                        </button>
                        <ul class="header__submenu-list">
                            {% for subitem in item.sublist %}
                            <li class="header__more-item">
                                <a class="header__more-link {% if subitem.isActive %} header__more-link--active {% endif %}"
                                    href="{{ subitem.href }}">{{ subitem.name }}</a>
                            </li>
                            {% endfor %}
                        </ul>
                        {% endif %}
                    </li>
                    {% endfor %}
                </ul>
                {% endif %}
            </nav>
    
        </div>


        <div class="header__auth">
            {% for button in args.button %}
            <div class="header__link">
                {% if button.href and button.name|length %}
                <button class="header__btn btn header__btn--active" href="{{ button.href }}">{{ button.name }}</button>
                {% endif %}
            </div>
            {% endfor %}
        </div>

    </div>
</header>
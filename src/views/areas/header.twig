{% set args = {
        logo: {
            src: "./../../images/header/logo.svg",
            },
        list: [
        {
            href: "#",
            name: "Home",
            isActive: true,
        },
        {
            href: "#",
            name: "About us",
        },
        {
            href: "#",
            name: "Our service",
        },
        {
            href: "#",
            name: "Pricing",
        },
        {
            name: "More",
            sublist: [
                {
                    href: "#",
                    name: "Shop",
                    isActive: true,
                },
                {
                    href: "#",
                    name: "Our team",
                },
                {
                    href: "#",
                    name: "Contacts",
                },
            ]
        },
        {
            name: "Last",
            sublist: [
                {
                    href: "#",
                    name: "Shop",
                    isActive: true,
                },
                {
                    href: "#",

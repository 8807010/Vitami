{% if not args %}
	{% set args = {
        list: [
            {
                href: "#",
                name: "Skin glow",
            },
            {
                href: "#",
                name: "FAQs",
            },
            {
                href: "#",
                name: "Blog ",
            },
            {
                href: "#",
                name: "Contacts",
            },
			
        ],
        logo: {
            src: "./../../images/svg_sprite_inline/ic-logoVitami.svg",
        },
        btn: {
            name: "Basket ",
            src: "./../../images/svg_sprite_inline/ic-basket.svg",
        },
		socials: [
            {
                href: "#",
                src: "./../../images/svg_sprite_inline/ic-facebook-color.svg",
            },
            {
                href: "#",
                src: "./../../images/svg_sprite_inline/ic-instagram-color.svg",
            },
            {
                href: "#",
                src: "./../../images/svg_sprite_inline/ic-twitter-color.svg",
            },
        ],
    } %}
{% endif %}


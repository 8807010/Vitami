<section class="s-news">
    <div class="s-news__container">
        {% if args.title %}
        <h2 class="s-news__title el-title ">{{ args.title }}</h2>
        {% endif %}

        {% if args.description %}
        <div class="s-news__text el-text">{{ args.description }}</div>
        {% endif %}

        {% if args.list|length %}
        <ul class="s-news__list">
            {% for item in args.list %}
            <li class="s-news__item">
                {% include "components/card.twig" with item %}
            </li>
            {% endfor %}
        </ul>
        {% endif %}

        <div class="s-news__footer">
            {% if args.link.href and args.link.name %}
            <a class="s-news__btn btn" href="{{ args.link.href }}">{{ args.link.name }}</a>
            {% endif %}
        </div>

<article class="c-card">
    {% if img.src %}
    <div class="c-card__picture">
        <img class="c-card__img" src="{{ img.src }}" alt="{{ img.alt }}">
    </div>
    {% endif %}
    
    <div class="c-card__content">
        {% if title %}
        <h3 class="c-card__subtitle el-subtitle">{{ title }}</h3>
        {% endif %}

        {% if text %}
        <div class="c-card__description">
            <p class="c-card__text el-text">{{ text }}</p>
        </div>
        {% endif %}

        {% if link.href and link.name %}
        <div class="c-card__more">
            <a class="c-card__link" href="{{ link.href }}">{{ link.name }}</a>
        </div>
        {% endif %}
        

        {% if price %}
        <p class="c-card__price">{{ price }}</p>
        {% endif %}

        {% if btn %}
        <button class="c-card__btn btn">{{ btn }}</button>
        {% endif %}
    </div>
</article>
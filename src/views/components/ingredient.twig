<article class="c-ingredient">

	{% if item.title %}
		<h3 class="c-ingredient__title">{{ item.title }}</h3>
	{% endif %}

	{% if item.text %}
		<p class="c-ingredient__text">{{ item.text }}</p>
	{% endif %}

	{% if item.img.src %}
		<div class="c-ingredient__picture">
			<img class="c-card__img" src="{{ item.img.src }}" alt="">
		</div>
	{% endif %}

</article>
